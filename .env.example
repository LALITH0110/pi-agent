# --- LLM ---
OPENAI_API_KEY=sk-...

# --- AWS (SRE Agent) ---
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
CLOUDWATCH_LOG_GROUP=/app/prod

# --- Database (Data Ghost) ---
DATABASE_URL=postgresql://user:password@localhost:5432/mydb
# SQLite fallback for local dev:
# DATABASE_URL=sqlite:///dev.db

# --- Security Sandbox ---
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
RISK_SCORE_THRESHOLD=70       # Commands scoring >= this escalate to Slack
OSV_SCANNER_ENABLED=true      # Set to false if osv-scanner is not installed

# --- Heartbeat (Data Ghost scheduler) ---
HEARTBEAT_INTERVAL_MINUTES=60

# --- Monitor Agent ---
MONITOR_INTERVAL_MINUTES=5          # How often to run the monitoring cycle (minutes)
ALERT_RULES_PATH=configs/alerts.json  # Path to your alert rules JSON config

# Email alerts (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_TO=oncall@example.com

# Generic webhook alerts
ALERT_WEBHOOK_URL=https://your-webhook.example.com/alerts
